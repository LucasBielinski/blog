<div class="posts list-group">
{{#each posts as || post}}
<div class = "card"> 
<div class="card-header flex-row justify-space-between">
  <h2> <a href="/single/{{post.id}}">{{post.title}}</a></h2>
  </div>
  <div class="card-body">
  By {{post.User.username}} on {{format_date post.createdAt}}
  </div>

</div>
</div>
{{/each}}